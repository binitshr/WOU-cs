@model finalProject.Models.Potlock
@{
    ViewData["Title"] = "Potlock Form";
}


<html>
  <head>
    <meta name="viewport" content="width=device-width" />
    <title>Potlock Form</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <div class="panel panel-success">
      <div class="panel-heading text-center">
        <h4>Potlock Form</h4>
      </div>
      <div class="panel-body">
        <form class="p-a-1" asp-action="PotlockForm" method="get">
          <div asp-validation-summary="All"></div>
          <div class="form-group">
            <label asp-for="Name">Your name:</label>
            <input class="form-control" asp-for="Name" />
          </div>
          <div class="form-group">
            <label asp-for="Category">Food Category:</label>
            <input class="form-control" asp-for="Category" />
          </div>
          <div class="form-group">
            <label asp-for="Item">Food Item:</label>
            <input class="form-control" asp-for="Item" />
          </div>
          <div class="form-group">
            <label asp-for="Serving">Serving:</label>
            <input class="form-control" asp-for="Serving" />
          </div>
          <div class="form-group">
            <label>Requires reheating?</label>
            <select class="form-control" asp-for="Reheating">
              <option value="">Choose an option</option>
              <option value="true">Yes, requires reheating.</option>
              <option value="false">No, can be eaten cold.</option>
            </select>
          </div>
          <div class="text-center">
            <button class="btn btn-primary" type="submit">
              Meal Confirm
            </button>
          </div>
        </form>
      </div>
    </div>
    </body>
</html>

 
     

